{
    "manifest_version": 2,
    "name": "__MSG_name__",
    "version": "1.0.0",
    "description": "__MSG_description__",
    "author": "Seokjun Hong",
    "default_locale": "en",

    "permissions": [
        "<all_urls>",
        "tabs",
        "webNavigation"
    ],

    "browser_action": {
        "default_title": "__MSG_name__"
    },

    "web_accessible_resources": [
        "emoji.json"
    ],

    "background": {
        "scripts": [
            "js/background.js"
        ]
    },

    "content_scripts": [
        {
            "matches": [
                "https://github.com/*",
                "https://gist.github.com/*"
            ],
            "css": [
                "css/semantic.min.css",
                "css/common.css"
            ],
            "run_at": "document_idle",
            "all_frames": false
        }
    ]
}
